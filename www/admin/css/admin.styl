$white = #fff
$black = #000
$bg = #131720
$blue = #151F30
$blue2 = #2F80ED
$grey = #e0e0e0
$yellow = #FFC312
$red = #EB5757
$green = #29b474
$purple = #d2c9ff

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Rubik:ital,wght@0,300;0,400;0,500;1,400&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Inter', sans-serif
	font-weight 400
	background-color $bg
	font-weight normal
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color
	cursor pointer
	&:focus
		outline none
a
	transition .5s ease
	transition-property color, background-color, border-color
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property color, border-color
	&:focus
		outline none

select::-ms-expand
	display none

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $blue
	text-shadow none
::selection
	background $white
	color $blue
	text-shadow none

::-webkit-input-placeholder
	color #f2f2f2
	opacity 1
::-moz-placeholder
	color #f2f2f2
	opacity 1
:-moz-placeholder
	color #f2f2f2
	opacity 1
:-ms-input-placeholder
	color #f2f2f2
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background $blue

body::-webkit-scrollbar-thumb
	background-color $blue2
	outline 1px solid $blue

.tab-content
	width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity .4s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .4s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	right 0
	background-color $blue
	z-index 100
	transition .5s ease
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		position relative
		padding 0 15px
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		background-color $blue
		width 80%
		img
			width 80px
			height auto
			display block
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		right 15px
		top 24px
		span
			position absolute
			right 0
			width 24px
			height 2px
			background-color $white
			border-radius 2px
			transition .5s
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&--active
			span
				background-color $blue2
				&:first-child
					transform rotate(45deg)
					top 9px
				&:nth-child(2)
					opacity 0
				&:last-child
					width 24px
					transform rotate(-45deg)
					top 9px
	@media (min-width: 1200px)
		display none

/*==============================
	Sidebar
==============================*/
.sidebar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	background-color $bg
	position fixed
	top 0
	left 0
	bottom 0
	z-index 101
	width 280px
	transform translateX(-100%)
	transition .5s ease
	border-right 1px solid rgba($blue2, .1)
	&__logo
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		padding 0 30px
		background-color $bg
		width 100%
		position relative
		border-bottom 1px solid rgba($blue2, .1)
		img
			width 80px
			height auto
			display block
	&__user
		padding 20px 30px
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		border-bottom 1px solid rgba($blue2, .1)
	&__user-img
		width 40px
		height 40px
		border-radius 10px
		overflow hidden
		display block
		margin-right 15px
		img
			width 100%
	&__user-title
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		p
			color $white
			display block
			font-size 16px
			font-weight 500
			margin-bottom 0
			line-height 100%
		span
			display block
			color $grey
			font-size 10px
			line-height 100%
			margin-bottom 5px
	&__user-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 10px
		background-color $blue
		margin-left auto
		svg
			fill $blue2
			width 20px
			height auto
			transition fill .5s
		&:hover
			background-color $white
			svg
				fill $blue
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		padding 30px 0
		width 100%
		max-height calc(100vh - 220px)
	&__nav-link
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 16px
		color $grey
		font-family 'Rubik', sans-serif
		margin-left 30px
		svg
			fill $grey
			width 24px
			height auto
			transition fill .5s
			margin-right 15px
			margin-bottom 2px
			&:last-child
				width 16px
				margin-right 0
				margin-top 2px
				margin-left 2px
				margin-bottom 0
		&:hover
			color $blue2
			svg
				fill $blue2
		&--active
		&[aria-expanded="true"]
			color $blue2
			svg
				fill $blue2
		&--active
			cursor default
	&__nav-item
		width 100%
		display block
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
	&__menu
		padding 0
		display block
		width 100%
		min-width 200px
		text-align left
		margin-top 15px
		overflow hidden
		background-color rgba($blue2, .1)
		li
			padding 0 0 0 49px
			margin-bottom 15px
			position relative
			&:before
				content ''
				position absolute
				display block
				width 4px
				height 4px
				border-radius 50%
				background-color $blue2
				top 50%
				left 30px
				margin-top -2px
			&:last-child
				margin-bottom 0
				padding-bottom 20px
				&:before
					top calc(50% - 10px)
			&:first-child
				padding-top 20px
				&:before
					top calc(50% + 10px)
		a
			font-size 14px
			color $grey
			display block
			font-weight 400
			&:hover
				color $blue2
			&.active
				color $blue2
				cursor default
	&__copyright
		margin-top auto
		padding 0 30px 20px
		color $grey
		font-weight 400
		font-size 12px
		line-height 20px
		a
			color $white
			&:hover
				color $blue2
	&--active
		transform translateX(0)
	@media (min-width: 1200px)
		transform translateX(0)
		&__logo
			height 80px

/*==============================
	Main
==============================*/
.main
	position relative
	margin-top 70px
	padding 20px 0 0
	&__title
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		margin-bottom 20px
		border-bottom 1px solid rgba($blue2, .1)
		padding-bottom 20px
		h2
			font-family 'Rubik', sans-serif
			font-weight 400
			color $white
			font-size 28px
			line-height 100%
			margin-bottom 0
			b
				font-weight 500
	&__title-stat
		color $grey
		font-size 14px
		margin-left 15px
		margin-top 10px
	&__title-wrap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		margin-left auto
		width 100%
		margin-top 20px
	&__title-form
		position relative
		margin-top 20px
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		input
			height 40px
			border-radius 16px
			background-color $blue
			border none
			padding 0 60px 0 20px
			font-size 14px
			color $white
			width 100%
			position relative
			z-index 1
		button
			position absolute
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 16px
			height 16px
			right 20px
			z-index 2
			svg
				width 16px
				height auto
	&__title-link
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 140px
		height 40px
		border-radius 16px
		background-color $blue2
		font-size 14px
		color $grey
		text-transform uppercase
		font-weight 500
		margin-left auto
		&:hover
			color $blue
			background-color $white
	&__table-wrap
		position relative
		width 100%
		overflow auto
	&__table
		width 100%
		min-width 1050px
		border-spacing 0
		thead
			border-bottom 20px solid $bg
			th
				font-size 12px
				color $grey
				font-weight 400
				padding 0 20px 0 20px
				line-height 100%
				margin-bottom 0
				border none
		tbody
			tr
				border-bottom 10px solid $bg
			td
				padding 0
				background-color transparent
				border 0px solid transparent
				&:first-child
					.main__table-text
						border-radius 16px 0 0 16px
				&:last-child
					.main__table-text
					.main__table-btns
						border-radius 0 16px 16px 0
		&--dash
			width 100%
			min-width 500px
			thead
				border-bottom 1px solid rgba($blue2, .1)
				th
					padding 0 10px 15px 0
			tbody
				tr
					border-bottom none
					background-color transparent
				td
					padding 0
					.main__table-text
						background-color transparent
						padding 10px 15px 0 0
	&__table-text
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 14px
		color $white
		font-weight 400
		line-height 30px
		padding 20px
		background-color $blue
		white-space nowrap
		a
			color $white
			&:hover
				color $blue2
		svg
			margin-right 6px
			fill $blue2
			width 16px
			height auto
		&--rate
			font-weight 500
			font-size 14px
		&--red
			color $red
		&--green
			color $green
		&--grey
			color rgba($white, .5)
	&__table-btns
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		padding 20px
		background-color $blue
	&__table-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 30px
		height 30px
		font-size 16px
		color $white
		border-radius 10px
		background-color $bg
		margin-right 10px
		svg
			width 20px
			height auto
		&:last-child
			margin-right 0
		&--delete
			background-color rgba($red, .1)
			svg
				fill $red
			&:hover
				background-color rgba($red, .2)
		&--edit
			background-color rgba($blue2, .1)
			svg
				fill $blue2
			&:hover
				background-color rgba($blue2, .2)
		&--banned
			background-color rgba($green, .1)
			svg
				fill $green
			&:hover
				background-color rgba($green, .2)
		&--view
			background-color rgba($yellow, .1)
			svg
				fill $yellow
			&:hover
				background-color rgba($yellow, .2)
	&__user
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		background-color $blue
		padding 0 20px
		height 70px
	&__meta
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		height 40px
		h3
			color $white
			display block
			font-size 16px
			font-weight 500
			margin-bottom 0
			line-height 20px
		span
			color rgba($white, .7)
			font-size 14px
			line-height 20px
	&__avatar
		display block
		position relative
		width 40px
		height 40px
		overflow hidden
		border-radius 10px
		margin-right 15px
		img
			width 100%
	@media (min-width: 576px)
		padding 30px 0 0
		&__title
			margin-bottom 30px
			padding-bottom 30px
			h2
				font-size 30px
		&__title-wrap
			flex-direction row
			justify-content space-between
			align-items center
		&__title-form
			margin-top 0
			width 300px
	@media (min-width: 768px)
		&__title-wrap
			width auto
			margin-top 0
	@media (min-width: 1200px)
		padding 0 15px 30px 295px
		margin-top 0
		&__title
			padding-bottom 0
			height 80px

/*==============================
	Stats
==============================*/
.stats
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	position relative
	margin-bottom 20px
	padding 20px
	border-radius 16px
	background-color $blue
	width 100%
	span
		font-size 16px
		line-height 100%
		font-weight 400
		color $white
		margin-bottom 0
	p
		font-size 30px
		line-height 100%
		font-family 'Rubik', sans-serif
		font-weight 400
		color $grey
		margin-bottom 0
		margin-top 15px
		a
			color $white
			&:hover
				color $blue2
	svg
		position absolute
		bottom 20px
		right 20px
		fill $blue2
		height 34px
		width auto
	@media (min-width: 576px)
		margin-bottom 30px

/*==============================
	Dashbox
==============================*/
.dashbox
	background-color $blue
	margin-bottom 20px
	border-radius 16px
	overflow hidden
	&__title
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		padding 20px
		border-bottom 1px solid rgba($blue2, .1)
		h3
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			color $white
			font-weight 400
			font-size 18px
			line-height 100%
			margin-bottom 0
			font-family 'Rubik', sans-serif
			font-weight 400
			svg
				fill $blue2
				margin-right 10px
				width 24px
				height auto
	&__wrap
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__more
		display flex
		flex-direction row
		justify-content center
		align-items center
		padding 0 10px
		height 30px
		background-color $bg
		font-size 12px
		margin-left 15px
		color $grey
		border-radius 12px
		&:hover
			color $blue2
	&__refresh
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 22px
		height 30px
		svg
			fill $grey
			width 16px
			height auto
			transition fill .5s
		&:hover
			svg
				fill $blue2
	&__table-wrap
		position relative
		display block
		width 100%
		overflow auto
		padding 20px 20px 15px
	@media (min-width: 576px)
		margin-bottom 30px

/*==============================
	Filter
==============================*/
.filter
	position relative
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	&__item-label
		font-size 12px
		display block
		color $grey
		font-weight 400
		line-height 10px
	&__item-btn
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		cursor pointer
		height 30px
		transition .5s
		input
			display block
			position relative
			width auto
			background-color transparent
			border none
			font-size 14px
			color $white
			cursor pointer
			height 30px
			margin-right 10px
		span
			position relative
			width 16px
			height 16px
			display block
			margin-top 3px
			&:before
			&:after
				content ''
				position absolute
				display block
				width 16px
				height 2px
				background-color $grey
				left 0
				top 50%
				transition .5s
				margin-top -5px
				border-radius 2px
			&:after
				margin-top 2px
				width 10px
		&[aria-expanded="true"]
			span
				&:before
					transform rotate(45deg)
					margin-top -2px
					background-color $blue2
				&:after
					margin-top -2px
					width 16px
					transform rotate(-45deg)
					background-color $blue2
		&:hover
			span
				&:before
				&:after
					background-color $blue2
	&__item-menu
		top 100%
		left 0
		margin-top 0
		width 200px
		padding 0 20px
		background-color $blue
		display block
		transition .5s
		position absolute
		z-index 100
		pointer-events none
		opacity 0
		border-radius 16px
		li
			position relative
			margin-bottom 15px
			color $grey
			font-size 14px
			font-weight 400
			cursor pointer
			transition color .5s
			&:hover
				color $blue2
			&:first-child
				padding-top 20px
			&:last-child
				margin-bottom 0
				padding-bottom 20px
		&.show
			pointer-events auto
			opacity 1
			margin-top 5px
	@media (min-width: 768px)
		margin-right 60px
		margin-top 5px

/*==============================
	Paginator
==============================*/
.paginator
	display flex
	flex-direction row
	justify-content center
	align-items center
	margin 20px auto 30px
	width 100%
	height 50px
	border-radius 16px
	background-color $blue
	&__pages
		display none
	&__paginator
		display flex
		flex-direction row
		justify-content center
		align-items center
		li
			margin-right 15px
			&:last-child
				margin-right 0
			&.active
				a
					color $blue2
					cursor default
		a
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 30px
			height 30px
			border-radius 12px
			background-color $bg
			font-size 14px
			color $grey
			font-weight 500
			svg
				stroke $grey
				transition .5s
			&:hover
				color $blue2
				svg
					stroke $blue2
	@media (min-width: 768px)
		padding 0 20px
		height 60px
		justify-content space-between
		&__pages
			display block
			font-size 14px
			color $grey
			font-weight 500
	@media (min-width: 1200px)
		margin 20px auto 0

/*==============================
	Form
==============================*/
.form
	background-color $bg
	padding 20px
	border-radius 16px
	margin-bottom 30px
	border 1px solid rgba($blue2, .1)
	.row
		margin-right -10px
		margin-left -10px
	[class*="col-"]
		padding-left 10px
		padding-right 10px
	&__group
		position relative
		margin-bottom 20px
		width 100%
		&--link
			&:before
				content ''
				pointer-events none
				position absolute
				right 20px
				top 0
				height 44px
				width 24px
				background url('../img/link.svg') no-repeat center center
				background-size 20px auto
				z-index 1
	&__input
		background-color $blue
		border 1px solid transparent
		border-radius 16px
		height 44px
		position relative
		color $white
		font-size 14px
		width 100%
		padding 0 20px
		&:focus
			background-color $blue
			border-color $blue2
	&__textarea
		background-color $blue
		border 1px solid transparent
		border-radius 16px
		height 142px
		position relative
		color $white
		font-size 14px
		width 100%
		padding 15px 20px
		resize none
		&:focus
			background-color $blue
			border-color $blue2
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		height 50px
		border-radius 16px
		background-color $blue2
		font-size 14px
		color $grey
		text-transform uppercase
		font-weight 500
		&:hover
			color $blue
			background-color $white
	&__radio
		position relative
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		margin-bottom 20px
		li
			position relative
			overflow hidden
			margin-right 20px
			&:last-child
				margin-right 0
		span
			font-size 14px
			color $grey
		input
			&:not(:checked)
			&:checked
				position absolute
				left -9999px
		label
			display block
			margin 0
			position relative
			font-weight 400
			cursor pointer
